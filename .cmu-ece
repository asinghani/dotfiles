# EDA tools
# Setup 240 stuff
export PATH=$PATH:/afs/ece.cmu.edu/class/ece240/bin

# Setup Synopsys
export SYNOPSYS_HOME="/afs/ece.cmu.edu/support/synopsys/synopsys.release"
export SYNOPSYS_LICENSE="/afs/ece.cmu.edu/support/synopsys/license.dat"
export LM_LICENSE_FILE="${LM_LICENSE_FILE}:${SYNOPSYS_LICENSE}"

# Setup DC
export DC_VERSION="syn-vJ-2014.09-SP4"
export DC_HOME="${SYNOPSYS_HOME}/${DC_VERSION}"
export PATH="${PATH}:${DC_HOME}/bin"
export MANPATH="${MANPATH}:${DC_HOME}/doc/syn/man"

# Setup VCS
export VCS_VERSION="vcs-mx_vK-2015.09"
export VCS_HOME="${SYNOPSYS_HOME}/${VCS_VERSION}"
export VCS_ARCH_OVERRIDE="linux"
export VCS_MODE_FLAG=64
export VCS_TARGET_ARCH="amd64"
export VCS_LIC_EXPIRE_WARNING=0
export PATH="${PATH}:${VCS_HOME}/bin"
export MANPATH="${MANPATH}:${VCS_HOME}/doc/man"
alias vcs="vcs -q -nc -debug -sverilog"

# Setup QuartusII
export PATH=$PATH:/afs/ece/support/altera/release/12.1/quartus/bin
export QUARTUS_64BIT=1
export LM_LICENSE_FILE=5281@altera-lic.ece.cmu.edu:$LM_LICENSE_FILE

# Setup Vivado 2018.3
export PATH="/afs/ece/support/xilinx/xilinx.release/Vivado-2018.3/Vivado/2018.3/bin:$PATH"
export LM_LICENSE_FILE="2101@xilinx-lic.ece.cmu.edu:${LM_LICENSE_FILE}"

# 447 and RISC-V tools
export PATH="${PATH}:/afs/ece.cmu.edu/class/ece447/bin/"
export LD_LIBRARY_PATH="${LD_LIBRARY_PATH}:/afs/ece.cmu.edu/class/ece447/lib/"



